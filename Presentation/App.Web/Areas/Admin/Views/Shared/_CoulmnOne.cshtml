@using App.Services
@inject IWorkContext WorkContext

@{
    var lang = await WorkContext.GetWorkingLanguageAsync();
    var langCode = lang?.LanguageCulture ?? "en";
    var isRtl = lang?.Rtl ?? false;
}
<!DOCTYPE html>
<html lang="@langCode" dir="@(isRtl ? "rtl" : "ltr")" data-bs-theme="light" data-color-theme="Blue_Theme" data-layout="vertical">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Admin &amp; Dashboard Template based on Bootstrap 5">
    <meta name="author" content="SuperVesion">
@*     <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" /> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="~/Modern/assets/css/styles.css" />
    <link rel="stylesheet" href="~/Modern/assets/libs/owl.carousel/dist/assets/owl.carousel.min.css" />
    <link rel="shortcut icon" type="image/png" href="~/Modern/assets/images/logos/favicon.png" />

    <title>SuperVesion</title>

@*     <link href="~/css/app.css" rel="stylesheet">
 *@
</head>

<body data-sidebartype="mini-sidebar">
    <div id="main-wrapper">
        <div class="wrapper">
            <partial name="_Sidebar" />
            <div class="page-wrapper">
                <div class="main">
                    <partial name="_NavBar" />
                    <div class="body-wrapper">
                        <div class="container-fluid">
                            @RenderBody()
                        </div>
                    </div>

                </div>
            </div>
            

        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="~/js/app.js"></script>

    <script src="~/Modern/assets/js/vendor.min.js"></script>
    <!-- Import Js Files -->
    <script src="~/Modern/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Modern/assets/libs/simplebar/dist/simplebar.min.js"></script>
    <script src="~/Modern/assets/js/theme/app.init.js"></script>
    <script src="~/Modern/assets/js/theme/theme.js"></script>
    <script src="~/Modern/assets/js/theme/app.min.js"></script>
    <script src="~/Modern/assets/js/theme/sidebarmenu.js"></script>

    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

    <!-- highlight.js (code view) -->
    <script src="~/Modern/assets/js/highlights/highlight.min.js"></script>
    <script>
        hljs.initHighlightingOnLoad();


        document.querySelectorAll("pre.code-view > code").forEach((codeBlock) => {
          codeBlock.textContent = codeBlock.innerHTML;
        });
    </script>
    <script src="~/Modern/assets/libs/owl.carousel/dist/owl.carousel.min.js"></script>
    <script src="~/Modern/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Modern/assets/js/dashboards/dashboard.js"></script>

</body>

</html>