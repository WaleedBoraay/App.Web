@using App.Services.Localization
@inject ILanguageService LanguageService
@inject App.Services.IWorkContext WorkContext
@{
    var currentUser = await WorkContext.GetCurrentUserAsync();
    var langName = await WorkContext.GetWorkingLanguageAsync();
}
<nav class="navbar navbar-expand navbar-light navbar-bg">
    <a class="sidebar-toggle js-sidebar-toggle">
        <i class="hamburger align-self-center"></i>
    </a>

    <div class="navbar-collapse collapse">
        <ul class="navbar-nav navbar-align">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" data-bs-toggle="dropdown">
                    <i class="align-middle" data-feather="globe"></i>
                    <span>@langName.Name</span>
                </a>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                    @foreach (var lang in await LanguageService.GetAllAsync())
                    {
                        if (lang.Published)
                        {
                            <a class="dropdown-item" asp-controller="Languages" asp-action="Change" asp-route-lang="@lang.LanguageCulture" asp-route-returnUrl="@Context.Request.Path">
                                <img src="~/images/flags/@lang.FlagImageFileName" alt="@lang.Name" width="20" class="me-2" />
                                @lang.Name
                            </a>
                        }
                    }
                </div>
            </li>


            @* 🔔 Notifications Component *@
            @await Component.InvokeAsync("Notifications")

            @* 💬 Messages Dropdown (لسه ثابتة زي ما هي لحد ما نعملها ViewComponent) *@
            <li class="nav-item dropdown">
                <a class="nav-icon dropdown-toggle" href="#" id="messagesDropdown" data-bs-toggle="dropdown">
                    <div class="position-relative">
                        <i class="align-middle" data-feather="message-square"></i>
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end py-0" aria-labelledby="messagesDropdown">
                    <div class="dropdown-menu-header">
                        <div class="position-relative">
                            4 New Messages
                        </div>
                    </div>
                    <div class="dropdown-menu-footer">
                        <a href="#" class="text-muted">Show all messages</a>
                    </div>
                </div>
            </li>

            @* 👤 User Menu *@
            <li class="nav-item dropdown">
                <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">
                    <i class="align-middle" data-feather="settings"></i>
                </a>

                <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
                    <span class="text-dark">@currentUser.Username</span>
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Manage">
                        <i class="align-middle me-1" data-feather="user"></i> Manage Profile
                    </a>
                    <div class="dropdown-divider"></div>
                    <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0 m-0">
                        <button type="submit" class="btn btn-link text-start w-100">
                            <i class="align-middle me-1" data-feather="log-out"></i> Log out
                        </button>
                    </form>
                </div>
            </li>
        </ul>
    </div>
</nav>
