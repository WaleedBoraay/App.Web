@model App.Web.Areas.Admin.Models.LanguageModel
@{
    ViewBag.Title = "تعديل اللغة";
}

<h2>تعديل اللغة</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UniqueSeoCode" class="form-label"></label>
        <input asp-for="UniqueSeoCode" class="form-control" />
        <span asp-validation-for="UniqueSeoCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}