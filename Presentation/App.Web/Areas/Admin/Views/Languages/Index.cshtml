@model List<App.Web.Areas.Admin.Models.LanguageModel>
@{
    ViewBag.Title = "قائمة اللغات";
}

<h2>قائمة اللغات</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة لغة جديدة</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الرمز</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lang in Model)
        {
            <tr>
                <td>@lang.Name</td>
                <td>@lang.UniqueSeoCode</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@lang.Id" class="btn btn-primary ">تعديل</a>
                    <form asp-action="Delete" asp-route-id="@lang.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger " onclick="return confirm('هل أنت متأكد من حذف اللغة؟');">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>