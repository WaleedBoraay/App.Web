@model App.Core.Domain.Organization.Sector

<h2>Create Sector</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SectorDescription" class="form-label"></label>
        <input asp-for="SectorDescription" class="form-control" />
        <span asp-validation-for="SectorDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
