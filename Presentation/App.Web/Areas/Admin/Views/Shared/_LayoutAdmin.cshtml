<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Area</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3 vh-100" style="width: 250px;">
            <h4 class="mb-4">
                <i class="bi bi-speedometer2"></i>@ViewData["Title"]
            </h4>
            <ul class="nav flex-column">

                <!-- Dashboard -->
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Home">
                        <i class="bi bi-house"></i> Dashboard
                    </a>
                </li>
                @await Component.InvokeAsync("Notifications")
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Inbox">
                        <i class="bi bi-envelope"></i> Inbox
                    </a>
                </li>

                <!-- Registration (Collapsible) -->
                <li class="nav-item mt-3 fw-bold">
                    <a class="nav-link text-white d-flex justify-content-between align-items-center"
                       data-bs-toggle="collapse" href="#registrationMenu" role="button" aria-expanded="false" aria-controls="registrationMenu">
                        <span><i class="bi bi-journal-text"></i> Registration</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="registrationMenu">
                        <ul class="nav flex-column ms-3">
                            <li><a class="nav-link text-white" href="/Admin/Registrations"><i class="bi bi-building"></i> Registrations</a></li>
                            <li><a class="nav-link text-white" href="/Admin/Contact/Index"><i class="bi bi-people"></i> Contacts</a></li>
                            <li><a class="nav-link text-white" href="/Admin/Document/Index"><i class="bi bi-file-earmark-text"></i> Documents</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Users & Access Control (Collapsible) -->
                <li class="nav-item mt-3 fw-bold">
                    <a class="nav-link text-white d-flex justify-content-between align-items-center"
                       data-bs-toggle="collapse" href="#usersMenu" role="button" aria-expanded="false" aria-controls="usersMenu">
                        <span><i class="bi bi-person-gear"></i> Users & Access Control</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="usersMenu">
                        <ul class="nav flex-column ms-3">
                            <li><a class="nav-link text-white" href="/Admin/User/Index"><i class="bi bi-person"></i> Users</a></li>
                            <li><a class="nav-link text-white" href="/Admin/Roles/Index"><i class="bi bi-shield-lock"></i> Roles</a></li>
                            <li><a class="nav-link text-white" href="/Admin/Permissions/Index"><i class="bi bi-key"></i> Permissions</a></li>
                            <li><a class="nav-link text-white" href="/Admin/UserRoles/Index"><i class="bi bi-people"></i> User ↔ Roles</a></li>
                            <li><a class="nav-link text-white" href="/Admin/UserPermissionOverrides/Index"><i class="bi bi-toggle-on"></i> User Overrides</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Notifications -->
                <li class="nav-item mt-3 fw-bold">
                    <a class="nav-link text-white" href="/Admin/Notification/Index">
                        <i class="bi bi-bell"></i> Notifications
                    </a>
                </li>

                <!-- Audit -->
                <li class="nav-item mt-3 fw-bold">
                    <a class="nav-link text-white" href="/Admin/AuditTrail/Index">
                        <i class="bi bi-clock-history"></i> Audit Trail
                    </a>
                </li>

                <!-- Settings (Collapsible) -->
                <li class="nav-item mt-3 fw-bold">
                    <a class="nav-link text-white d-flex justify-content-between align-items-center"
                       data-bs-toggle="collapse" href="#settingsMenu" role="button" aria-expanded="false" aria-controls="settingsMenu">
                        <span><i class="bi bi-gear"></i> Settings</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="settingsMenu">
                        <ul class="nav flex-column ms-3">
                            <li><a class="nav-link text-white" href="/Admin/Settings/System"><i class="bi bi-sliders"></i> System Settings</a></li>
                            <li><a class="nav-link text-white" href="/Admin/Settings/Workflow"><i class="bi bi-diagram-3"></i> Workflow Settings</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Reports -->
                <li class="nav-item mt-3 fw-bold">
                    <a class="nav-link text-white" href="/Admin/Reports/Index">
                        <i class="bi bi-bar-chart-line"></i> Reports
                    </a>
                </li>

            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
