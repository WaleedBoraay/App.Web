@model App.Web.Areas.Admin.Models.Institutes.InstituteDetailsModel
@using App.Core.Extensions
@inject App.Services.Localization.ILocalizationService _localizationService

<h2>Institute Details</h2>

<!-- Institution Info -->
<div class="card mb-3">
    <div class="card-header bg-dark text-white">Institution Info</div>
    <div class="card-body">
        <h4>@Model.InstituteName</h4>
        <p><strong>License Number:</strong> @Model.LicenseNumber</p>
        <p><strong>Country:</strong> @Model.CountryName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.BusinessPhoneNumber</p>
        <p>
            <strong>Status:</strong>
            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                @(Model.IsActive ? "Active" : "Inactive")
            </span>
        </p>
    </div>
</div>

<!-- Registration -->
@if (Model.Registration != null)
{
    <div class="card mb-3">
        <div class="card-header bg-dark text-white">Registration</div>
        <div class="card-body">
            <p><strong>Reg#:</strong> @Model.Registration.LicenseNumber</p>
            <p><strong>Status:</strong> @Model.Registration.Status</p>
            <p><strong>Issue Date:</strong> @Model.Registration.IssueDate?.ToString("d")</p>
            <p><strong>Expiry Date:</strong> @Model.Registration.ExpiryDate?.ToString("d")</p>
        </div>
    </div>
}

<!-- Contacts -->
<div class="card mb-3">
    <div class="card-header bg-dark text-white d-flex justify-content-between">
        <span>Contacts</span>
        <a asp-action="CreateContact" asp-route-registrationId="@Model.Registration?.InstitutionId"
           class="btn btn-sm btn-success">+ Add Contact</a>
    </div>
    <div class="card-body">
        @if (Model.Contacts != null && Model.Contacts.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Job Title</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Business Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Contacts)
                    {
                        <tr>
                            <td>@($"{c.FirstName} {c.MiddleName} {c.LastName}")</td>
                            <td>@c.JobTitle</td>
                            <td>@c.Email</td>
                            <td>@c.ContactPhone</td>
                            <td>@c.BusinessPhone</td>
                            <td>
                                <a asp-action="EditContact" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Edit</a>
                                <form asp-action="DeleteContact" asp-route-id="@c.Id" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p><em>No contacts found.</em></p>
        }
    </div>
</div>

<!-- Documents -->
<div class="card mb-3">
    <div class="card-header bg-dark text-white d-flex justify-content-between">
        <span>Documents</span>
        <modal-button asp-action="@Url.Action("UploadInstituteDocument", "Institutes")"
                      asp-entity-id="@Model.InstituteId"
                      asp-entity-param-name="instituteId"
                      asp-entity-type="Institute"
                      modal-title="Upload Document"
                      button-text="+ Upload Document"
                      button-class="btn btn-success"
                      submit-text="Upload"
                      modal-type="upload">
        </modal-button>
    </div>
    <div class="card-body">
        @if (Model.Documents != null && Model.Documents.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Uploaded On</th>
                        <th>File</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model.Documents)
                    {
                        <tr>
                            <td>@(await _localizationService.GetLocalizedEnumAsync(doc.DocumentType))</td>
                            <td>@doc.UploadedOnUtc.ToString("g")</td>
                            <td>
                                <a asp-action="DownloadDocument" asp-route-documentId="@doc.Id"
                                   class="btn btn-sm btn-success">Download</a>
                                <a href="@doc.FilePath" target="_blank"
                                   class="btn btn-sm btn-primary">Open</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p><em>No documents uploaded.</em></p>
        }
    </div>
</div>

<!-- Branches -->
<div class="card mb-3">
    <div class="card-header bg-dark text-white d-flex justify-content-between">
        <span>Branches</span>
        <a asp-action="CreateBranch" asp-route-institutionId="@Model.InstituteId"
           class="btn btn-sm btn-success">+ Add Branch</a>
    </div>
    <div class="card-body">
        @if (Model.Branches != null && Model.Branches.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.Branches)
                    {
                        <tr>
                            <td>@b.Name</td>
                            <td>@b.Address</td>
                            <td>@b.Phone</td>
                            <td>@b.Email</td>
                            <td>@b.CountryName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p><em>No branches found.</em></p>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
