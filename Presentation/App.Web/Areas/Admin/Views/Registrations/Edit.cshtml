@using App.Core.Domain.Ref
@using App.Web.Areas.Admin.Models.Registrations
@model App.Web.Areas.Admin.Models.Registrations.RegistrationModel

@{
    // Determine if fields should be editable
    bool isMaker = User.IsInRole("Maker");
    bool isChecker = User.IsInRole("Checker");
    bool isEditable = isMaker && Model.Status == App.Core.Domain.Registrations.RegistrationStatus.Draft;
}

<h2>Edit Registration</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <ul class="nav nav-tabs" id="regTabs" role="tablist">
        <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#general">General</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#contacts">Contacts</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#documents">Documents</a></li>
    </ul>

    <div class="tab-content mt-3">
        <div class="tab-pane fade show active" id="general">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="InstitutionName" class="form-label"></label>
                    <input asp-for="InstitutionName" class="form-control" readonly="@(isEditable ? "false" : "true")" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LicenseNumber" class="form-label"></label>
                    <input asp-for="LicenseNumber" class="form-control" readonly="@(isEditable ? "false" : "true")" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LicenseSectorId" class="form-label"></label>
                    <select asp-for="LicenseSectorId"
                            asp-items="Html.GetEnumSelectList<LicenseSector>()"
                            class="form-control" disabled="@(isEditable ? "false" : "true")"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FinancialDomainId" class="form-label"></label>
                    <select asp-for="FinancialDomainId"
                            asp-items="Html.GetEnumSelectList<FinancialDomain>()"
                            class="form-control" disabled="@(isEditable ? "false" : "true")"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CountryId" class="form-label"></label>
                    <select asp-for="CountryId"
                            asp-items="Model.AvailableCountries"
                            class="form-control" disabled="@(isEditable ? "false" : "true")"></select>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="contacts">
            @if (isMaker || isChecker)
            {
                @await Html.PartialAsync("~/Areas/Admin/Views/Contacts/_ContactsTable.cshtml", new ContactsTableModel { RegistrationId = Model.Id, Contacts = Model.Contacts })
            }
            else
            {
                <p class="text-muted">Read-only</p>
            }
        </div>

        <div class="tab-pane fade" id="documents">
            @if (isMaker && Model.Status == App.Core.Domain.Registrations.RegistrationStatus.Draft)
            {
                @await Html.PartialAsync(
                "~/Areas/Admin/Views/Documents/_DocumentsTable.cshtml",new DocumentsTableModel { RegistrationId = Model.Id, Documents = Model.Documents })
                        }
            else
            {
                <p class="text-muted">Documents are read-only at this stage.</p>
            }
        </div>
    </div>

    @if ((isMaker && Model.Status == App.Core.Domain.Registrations.RegistrationStatus.Draft) || isChecker)
    {
        <button type="submit" class="btn btn-primary mt-3">Update</button>
    }
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
