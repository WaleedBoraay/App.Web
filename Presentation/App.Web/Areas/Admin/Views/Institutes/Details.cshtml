@model App.Web.Areas.Admin.Models.Institutes.InstituteDetailsModel
@{
    ViewData["Title"] = "Institute Dashboard";
    ViewBag.InstituteId = Model.InstituteId;
}

<h2>@Model.InstituteName - Dashboard</h2>

<ul class="nav nav-pills" id="instituteTabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="overview-tab" data-bs-toggle="tab" href="#overview" role="tab">Overview</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contacts-tab" data-bs-toggle="tab" href="#contacts" role="tab">Contacts</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="branches-tab" data-bs-toggle="tab" href="#branches" role="tab">Branches</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="documents-tab" data-bs-toggle="tab" href="#documents" role="tab">Documents</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="transactions-tab" data-bs-toggle="tab" href="#transactions" role="tab">Transactions</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="risks-tab" data-bs-toggle="tab" href="#risks" role="tab">Risk Management</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="reports-tab" data-bs-toggle="tab" href="#reports" role="tab">Reports</a>
    </li>
</ul>

<div class="tab-content mt-3">
    <div class="tab-pane fade show active" id="overview" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteOverview", Model)
    </div>

    <div class="tab-pane fade" id="contacts" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteContacts", Model.Contacts)
    </div>

    <div class="tab-pane fade" id="branches" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteBranches", Model.Branches)
    </div>

    <div class="tab-pane fade" id="documents" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteDocuments", Model.Documents)
    </div>

    <div class="tab-pane fade" id="transactions" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteTransactions", new List<dynamic>())
    </div>

    <div class="tab-pane fade" id="risks" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteRisks", new List<dynamic>())
    </div>

    <div class="tab-pane fade" id="reports" role="tabpanel">
        @await Html.PartialAsync("Partials/_InstituteReports", new List<dynamic>())
    </div>
</div>
