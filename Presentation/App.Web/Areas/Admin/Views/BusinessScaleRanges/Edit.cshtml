@model BusinessScaleRangeModel
@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; ViewData["Title"] = "تحرير";
}
<div class="container" dir="rtl">
    <h3 class="my-3">@((Model?.BusinessScaleRangeId ?? 0) == 0 ? "إضافة" : "تعديل") نطاق حجم الأعمال</h3>
    <form method="post" asp-action="@(((Model?.BusinessScaleRangeId ?? 0) == 0) ? "Create" : "Edit")" asp-route-id="@Model?.BusinessScaleRangeId" class="card p-3">
        @Html.AntiForgeryToken()
        <div class="mb-2">
            <label class="form-label">الاسم</label>
            <input class="form-control" asp-for="RangeLabel" />
            <span asp-validation-for="RangeLabel" class="text-danger"></span>
        </div>
        <div class="row g-2">
            <div class="col-md-6">
                <label class="form-label">من</label>
                <input class="form-control" asp-for="MinValue" type="number" />
            </div>
            <div class="col-md-6">
                <label class="form-label">إلى</label>
                <input class="form-control" asp-for="MaxValue" type="number" />
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary">حفظ</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">رجوع</a>
        </div>
    </form>
</div>
