@model App.Web.Areas.Admin.Models.NotificationComposeModel
@{ ViewData["Title"]="Compose Notification"; }
<h2>@ViewData["Title"]</h2>
<form method="post">
  <div class="row g-3">
    <div class="col-md-4">
      <label class="form-label">Event Type</label>
      <input asp-for="EventType" class="form-control" placeholder="e.g. Registration.Submitted"/>
    </div>
    <div class="col-md-4">
      <label class="form-label">Registration (optional)</label>
      <input asp-for="RegistrationId" type="number" class="form-control"/>
    </div>
    <div class="col-md-4">
      <label class="form-label">Recipient User Id</label>
      <input asp-for="RecipientUserId" type="number" class="form-control"/>
    </div>
    <div class="col-md-3">
      <label class="form-label">Channel</label>
      <input asp-for="Channel" class="form-control"/>
    </div>
    <div class="col-12">
      <label class="form-label">Message</label>
      <textarea asp-for="Message" class="form-control" rows="4"></textarea>
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Send</button>
  </div>
</form>
