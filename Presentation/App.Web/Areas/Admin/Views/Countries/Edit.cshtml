@model App.Web.Areas.Admin.Models.CountryModel
@{
    ViewBag.Title = "تعديل الدولة";
}

<h2>تعديل الدولة</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumericIsoCode" class="form-label"></label>
        <input asp-for="NumericIsoCode" class="form-control" />
        <span asp-validation-for="NumericIsoCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}