@model App.Web.Models.Install.InstallModel
@{
    Layout = "~/Views/Shared/_LayoutInstall.cshtml";
    ViewData["Title"] = "Install";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post" class="mt-3" novalidate>
    <div asp-validation-summary="All" class="text-danger"></div>

    <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Database</legend>
        <div class="mb-3">
            <label class="form-label">Data Provider</label>
            <select asp-for="DataProvider" class="form-select" asp-items="ViewBag.AvailableDataProviders"></select>
        </div>

        <div class="form-check mb-3">
            <input asp-for="ConnectionStringRaw" class="form-check-input" id="useRaw" />
            <label asp-for="ConnectionStringRaw" class="form-check-label">Use raw connection string</label>
        </div>

        <div id="rawBlock" class="mb-3">
            <label asp-for="ConnectionString" class="form-label"></label>
            <input asp-for="ConnectionString" class="form-control" placeholder="Server=.;Database=FI;Trusted_Connection=True;MultipleActiveResultSets=true" />
            <span asp-validation-for="ConnectionString" class="text-danger"></span>
        </div>

        <div id="buildBlock">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ServerName" class="form-label"></label>
                    <input asp-for="ServerName" class="form-control" placeholder="e.g. . or localhost" />
                    <span asp-validation-for="ServerName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DatabaseName" class="form-label"></label>
                    <input asp-for="DatabaseName" class="form-control" placeholder="FI" />
                    <span asp-validation-for="DatabaseName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
            </div>
        </div>

        <div class="form-check mb-3">
            <input asp-for="CreateDatabaseIfNotExists" class="form-check-input" />
            <label asp-for="CreateDatabaseIfNotExists" class="form-check-label"></label>
        </div>
    </fieldset>

    <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Admin</legend>
        <div class="mb-3">
            <label asp-for="AdminEmail" class="form-label"></label>
            <input asp-for="AdminEmail" class="form-control" />
            <span asp-validation-for="AdminEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AdminPassword" class="form-label"></label>
            <input asp-for="AdminPassword" class="form-control" type="password" />
            <span asp-validation-for="AdminPassword" class="text-danger"></span>
        </div>
    </fieldset>

    <div class="form-check mb-3">
        <input asp-for="LoadSampleData" class="form-check-input" />
        <label asp-for="LoadSampleData" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary">Run Installation</button>
</form>

@section Scripts {
    <script>
        (function() {
            const useRaw = document.getElementById('useRaw');
            const rawBlock = document.getElementById('rawBlock');
            const buildBlock = document.getElementById('buildBlock');

            function toggleRaw() {
                const isRaw = useRaw.checked;
                rawBlock.style.display = isRaw ? 'block' : 'none';
                buildBlock.style.display = isRaw ? 'none' : 'block';
            }
            useRaw.addEventListener('change', toggleRaw);
            toggleRaw();
        })();
    </script>
}
