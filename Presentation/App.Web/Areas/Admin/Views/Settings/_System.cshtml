@model SystemSettingsModel

<h2>System Settings</h2>

<form asp-action="System" method="post">
    <div class="form-group">
        <label asp-for="ApplicationName"></label>
        <input asp-for="ApplicationName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DefaultTimeZone"></label>
        <input asp-for="DefaultTimeZone" class="form-control" />
        <small class="form-text text-muted">e.g. UTC, Asia/Riyadh, Africa/Cairo</small>
    </div>

    <div class="form-check mt-2">
        <input asp-for="EnableEmail" class="form-check-input" />
        <label asp-for="EnableEmail" class="form-check-label">Enable Email</label>
    </div>

    <div class="form-check mt-2">
        <input asp-for="EnableAuditTrail" class="form-check-input" />
        <label asp-for="EnableAuditTrail" class="form-check-label">Enable Audit Trail</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
