@model App.Web.Areas.Admin.Models.Institutes.InstituteEditModel

<h2>Create Institute</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="BusinessPhoneNumber" class="form-label"></label>
        <input asp-for="BusinessPhoneNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LicenseNumber" class="form-label"></label>
        <input asp-for="LicenseNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LicenseSectorId" class="form-label"></label>
        <select asp-for="LicenseSectorId" asp-items="Model.AvailableLicenseSectors" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="FinancialDomainId" class="form-label"></label>
        <select asp-for="FinancialDomainId" asp-items="Model.AvailableFinancialDomains" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="LicenseIssueDate" class="form-label"></label>
        <input asp-for="LicenseIssueDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LicenseExpiryDate" class="form-label"></label>
        <input asp-for="LicenseExpiryDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CountryId" class="form-label"></label>
        <select asp-for="CountryId" asp-items="Model.AvailableCountries" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">License File</label>
        <input type="file" name="LicenseFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Other Document</label>
        <input type="file" name="DocumentFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
