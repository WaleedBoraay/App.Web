@model App.Web.Areas.Admin.Models.Institutes.InstituteSearchModel

<h2>Entity Profile</h2>

<form asp-action="Index" method="get" class="row mb-3">
    <div class="col-md-3">
        <input asp-for="SearchName" class="form-control" placeholder="Search by Name" />
    </div>
    <div class="col-md-3">
        <input asp-for="LicenseNumber" class="form-control" placeholder="License Number" />
    </div>
    <div class="col-md-3">
        <select asp-for="CountryId" class="form-control"
                asp-items="@(new SelectList(Model.AvailableCountries, "Id", "Name"))">
            <option value="">-- Select Country --</option>
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>License</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Status</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>@item.InstituteName</td>
                <td>@item.LicenseNumber</td>
                <td>@item.CountryName</td>
                <td>@item.BusinessPhoneNumber</td>
                <td>@item.Email</td>
                <td>
                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                        @(item.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.InstituteId" class="btn btn-sm btn-info">
                        Open Dashboard
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.InstituteId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.InstituteId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
