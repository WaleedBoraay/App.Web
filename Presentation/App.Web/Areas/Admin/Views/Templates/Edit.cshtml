@model App.Core.Domain.Common.Template
@{ ViewData["Title"] = (Model?.Id>0? "Edit":"Create") + " Template"; }
<h2>@ViewData["Title"]</h2>
<form method="post">
  <input type="hidden" asp-for="Id"/>
  <div class="mb-3"><label class="form-label">Name</label><input asp-for="Name" class="form-control"/></div>
  <div class="mb-3"><label class="form-label">Type</label><input asp-for="TemplateType" class="form-control"/></div>
  <div class="mb-3"><label class="form-label">Content</label><textarea asp-for="Content" class="form-control" rows="9"></textarea></div>
  <div><button class="btn btn-primary">Save</button> <a href="/Admin/Templates" class="btn btn-light">Cancel</a></div>
</form>
