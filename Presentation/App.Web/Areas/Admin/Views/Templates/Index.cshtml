@model IEnumerable<App.Core.Domain.Common.Template>
@{
    ViewData["Title"] = "Templates";
}
<h2>Templates</h2>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4"><input name="type" value="@ViewBag.Type" class="form-control" placeholder="Filter by type" /></div>
    <div class="col-md-2"><button class="btn btn-outline-secondary">Filter</button></div>
    <div class="col-md-6 text-end"><a class="btn btn-primary" href="/Admin/Templates/Edit">Create</a></div>
</form>
<table class="table table-striped">
    <thead><tr><th>Id</th><th>Name</th><th>Type</th><th></th></tr></thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Name</td>
                <td>@t.TemplateType</td>
                <td class="text-end">
                    <a class="btn  btn-outline-secondary" href="/Admin/Templates/Edit/@t.Id">Edit</a>
                    <form method="post" asp-action="Delete" class="d-inline">
                        <input type="hidden" name="id" value="@t.Id" />
                        <button class="btn  btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
